<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constEncDeta"
    tools:context="com.cmp2017.devworms.cmp2017.EncuestaDetalleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgDetaEncuesta"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ePregunta1"
                android:textAlignment="center"
                android:textSize="22dp"
                />

            <RatingBar
                android:id="@+id/ratingPregunta1"
                style="@style/Widget.AppCompat.RatingBar"
                android:progressTint="#F7FE2E"
                android:secondaryProgressTint="#FFFF00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="5"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/ePregunta2"
                android:textSize="22dp"
                />

            <RatingBar
                android:id="@+id/ratingPregunta2"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:progressTint="#F7FE2E"
                android:secondaryProgressTint="#FFFF00"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="5"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ePregunta3"
                android:textAlignment="center"
                android:textSize="22dp"
                android:layout_marginTop="5dp"
                />

            <RatingBar
                android:id="@+id/ratingPregunta3"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="#F7FE2E"
                android:secondaryProgressTint="#FFFF00"
                android:layout_gravity="center"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textSize="14dp"
                android:textColor="#fff"
                android:background="#5858FA"
                android:id="@+id/btnEnviarEncuesta"
                android:padding="5dp"
                android:text="Enviar CalificaciÃ³n"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
