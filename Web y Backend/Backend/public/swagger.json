{
    "swagger": "2.0",
    "info": {
        "description": "API para CMP",
        "version": "0.0.1",
        "title": "CMP WebService"
    },
    "host": "cmp.devworms.com",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/user/login": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Login de usuario",
                "description": "Login de usuario devuelve el api_key del usuario",
                "operationId": "loginUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "in": "formData",
                        "description": "Email del usuario",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Contraseña del usuario",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid username/password supplied"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/user/signup": {
            "post": {
                "tags": [
                    "user"
                ],
                "summary": "Registro de usuario",
                "description": "Registro de usuario",
                "operationId": "signupUser",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "formData",
                        "description": "Nombre(s)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "last_name",
                        "in": "formData",
                        "description": "Apellido(s)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "email",
                        "in": "formData",
                        "description": "Email, no puede repetirse en la BD",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "description": "Contraseña (mínimo 6 caracteres)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password_confirmation",
                        "in": "formData",
                        "description": "Confirmación de la contraseña",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "type",
                        "in": "formData",
                        "description": "Tipo de usuario (es un string por el momento) Ej. \"Trabajador de Pemex\"",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "association",
                        "in": "formData",
                        "description": "Asociación (es un string por el momento) Ej. \"Asociación 4\"",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid username/password supplied"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/user/profile/{id}/{api_key}": {
            "get": {
                "tags": [
                    "user"
                ],
                "summary": "Perfil de usuario",
                "description": "Devuelve el perfil del usuario",
                "operationId": "userProfile",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Nombre(s)",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "last_name",
                        "in": "api_key",
                        "description": "Apellido(s)",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "Invalid username/password supplied"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "name": {
                    "type": "string"
                },
                "last_Name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "association": {
                    "type": "string"
                }
            }
        },
        "ApiResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "integer",
                    "format": "int32"
                },
                "mensaje": {
                    "type": "string"
                }
            }
        }
    }
}