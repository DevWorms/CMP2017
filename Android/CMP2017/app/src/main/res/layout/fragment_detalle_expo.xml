<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/linearExpo"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmp2017.devworms.cmp2017.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="top"
                android:background="@android:color/transparent"
                android:minHeight="80dp"
                android:scaleType="fitXY"
                 />


            <!-- Song Title -->

            <!-- Album Name -->
            <TextView
                android:id="@+id/txtNomEmpre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Nombre empresa"
                android:textColor="#1e2747"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txtContac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Contacto:"
                android:textColor="#1e2747"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txtPaginaExpo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textColor="#1e2747"
                android:textSize="14sp" />

            <!-- Album Name -->

            <TextView
                android:id="@+id/txtTelefono"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textColor="#1e2747"
                android:textSize="14sp" />

            <!-- Song Duration -->

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textColor="#1e2747"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Acerca de:"
                android:textColor="#1e2747"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/txtAcercaDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp" />

            <Button
                android:id="@+id/btnPresent"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnpresentacion"
                android:paddingBottom="5dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnLocalizar"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnlocalizarmapa"
                android:paddingBottom="5dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnAgreExpo"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btnagregarespo" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>